@model List<Company>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient  py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white  py-2">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-5">
            <div class="row">
                <div class="col-12 p-1 text-end">
                    <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                        Add New Company <i class="bi bi-plus-circle-dotted"></i>
                    </a>
                </div>
            </div>
            <table id="compData" class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>Region</th>
                        <th>PhoneNumber</th>
                        <th></th>
                    </tr>
                </thead>
                
            </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/company.js"></script>
}